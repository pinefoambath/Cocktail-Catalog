
<div class="main_section" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= cl_image_path 'jdfgdidiwrhgfteo7dvx', height: 300, width: 400, crop: :fill %>')"

    <div class="title">
      <h1>🍹 🍸  Welcome to my bar!  🍸 🍹</h1>
      <h2>What can I get you?</h2>
    </div>

    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="individual_card">
          <div class="cocktail_name">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      <% end %>

    </div>
    <%= cl_image_tag("ruumnaqtfgdoxnzwwcgs",
          width: 150, height: 150, crop: :thumb, gravity: :face) %>

    <%= link_to "Add a new cocktail", new_cocktail_path %>

</div>

